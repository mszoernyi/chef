{
  "name": "base",
  "default_attributes": {
    "chef_client": {
      "log_file": null
    },
    "ohai": {
      "plugin_path": "/etc/chef/ohai/plugins",
      "disabled_plugins": [
        ":Hostnamectl"
      ]
    }
  },
  "override_attributes": {
    "authorization": {
      "sudo": {
        "groups": [
          "sudo"
        ],
        "passwordless": true
      }
    }
  },
  "run_list": [
    "recipe[ubuntu]",
    "recipe[apt]",
    "recipe[hostmasters]",
    "recipe[chef-client::config]",
    "recipe[build-essential]",
    "recipe[bash]",
    "recipe[cron]",
    "recipe[git]",
    "recipe[gnupg]",
    "recipe[htop]",
    "recipe[logrotate]",
    "recipe[ssh]",
    "recipe[tmux]",
    "recipe[vim]"
  ]
}
